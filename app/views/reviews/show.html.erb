<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<h2>Reviews</h2>

<% @product.reviews.each do |review| %>
  <div>
    <%= review.rating %>
    <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<h2>New review</h2>

<%= form_for([@product, @review]) do |f| %>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', products_path %>